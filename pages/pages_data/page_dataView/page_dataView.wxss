/* pages/added/added.wxss */

p {
  display: block;
  text-align: center;
  padding: 5% 0;
  color: #bb4a3a;
}

.table {
  border: 0px solid darkgray;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2.5rem;
  align-items: center;
}

.td {
  width: 20%;
  justify-content: center;
  text-align: center;
}

.bg-g {
  background: #fff;
  color: #bb4a3a;
}

.bg-g:nth-child(odd) {
  background: #eee;
  color: #bb4a3a;
}

.bg-z {
  background: #bb4a3a;
  color: #fff;
}

.th {
  width: 20%;
  justify-content: center;
  background: #bb4a3a;
  color: #fff;
  display: flex;
  height: 2.5rem;
  align-items: center;
}

.select_date {
  border: 1px solid #bb4a3a;
  width: 70%;
  border-radius: 2px;
  padding: 0.5rem;
  margin: 1rem auto;
}

.hide {
  display: none;
}
